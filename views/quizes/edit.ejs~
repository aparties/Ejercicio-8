</form>

<label for="quiz[genero]">Tema de la pregunta:</label><br />
       <select name="quiz[genero]">
          <%
              for( var i in temas ) {
                  var text = temas[ i ];
                  var selected = "";
                  if ( quiz.genero === text ) {
                     selected = "selected";
                  }
                  %>
                  <option value="<%= text %>" <%= selected %>><%= text %></option>
                  <%
              }
        %>
     </select>
